<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Calcu"
    android:orientation="vertical"
    android:background="@color/black"

    >

    <TextView
      android:id="@+id/txt1"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginLeft="15dp"

        android:layout_marginTop="50dp"
        android:layout_marginRight="15dp"
        android:textSize="30dp"
        android:textColor="@color/white"

        >

    </TextView>

    <TextView
        android:id="@+id/txt2"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"

        android:textSize="18dp"
        android:textColor="@color/white"


        >

    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"


        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal"
        android:background="@color/purple_200">

        <Button
            android:id="@+id/b7"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/purple_200"
            android:text="7"

            android:textSize="20dp">

        </Button>

        <Button
            android:id="@+id/b8"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="8"
            android:background="@color/purple_200"
            android:textSize="20dp">

        </Button>

        <Button
            android:id="@+id/b9"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="9"
            android:background="@color/purple_200"
            android:textSize="20dp">

        </Button>

        <Button
            android:id="@+id/bsub"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="-"
            android:background="@color/purple_200"
            android:textSize="35dp"
            android:textColor="@color/btcolor">

        </Button>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/purple_200"
        android:orientation="horizontal"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        >

        <Button
            android:id="@+id/b4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/purple_200"
            android:text="4"

            android:textSize="20dp">

        </Button>

        <Button
            android:id="@+id/b5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="5"
            android:background="@color/purple_200"
            android:textSize="20dp">

        </Button>

        <Button
            android:id="@+id/b6"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="6"
            android:background="@color/purple_200"
            android:textSize="20dp">

        </Button>

        <Button
            android:id="@+id/bmult"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="*"
            android:background="@color/purple_200"
            android:textSize="20dp"
            android:textColor="@color/btcolor">

        </Button>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal"
        android:background="@color/purple_200">

        <Button
            android:id="@+id/b1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/purple_200"
            android:text="1"

            android:textSize="20dp">

        </Button>

        <Button
            android:id="@+id/b2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="2"
            android:background="@color/purple_200"
            android:textSize="20dp">

        </Button>

        <Button
            android:id="@+id/b3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="3"
            android:background="@color/purple_200"
            android:textSize="20dp">

        </Button>

        <Button
            android:id="@+id/bmod"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="%"
            android:background="@color/purple_200"
            android:textSize="20dp"
            android:textColor="@color/btcolor">

        </Button>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal"
        android:background="@color/purple_200">

        <Button
            android:id="@+id/bdot"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/purple_200"
            android:text="."

            android:textSize="20dp">

        </Button>

        <Button
            android:id="@+id/b0"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="0"
            android:background="@color/purple_200"
            android:textSize="20dp">

        </Button>

        <Button
            android:id="@+id/badd"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="+"
            android:background="@color/purple_200"
            android:textSize="20dp"
            android:textColor="@color/btcolor">

        </Button>

        <Button
            android:id="@+id/bdev"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="/"
            android:background="@color/purple_200"
            android:textSize="20dp"
            android:textColor="@color/btcolor">

        </Button>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal"
        android:background="@color/purple_200">

        <Button
            android:id="@+id/bdel"
            android:layout_width="175dp"
            android:layout_height="match_parent"
            android:background="@color/purple_200"
            android:text="Del"

            android:textSize="20dp"
            android:textColor="@color/btcolor">

        </Button>

        <Button
            android:id="@+id/beql"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="="
            android:background="@color/purple_200"
            android:textSize="20dp"
            android:textColor="@color/btcolor">

        </Button>

    </LinearLayout>

   <Button
       android:id="@+id/bclr"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginRight="20dp"
       android:layout_marginLeft="20dp"
       android:background="@color/purple_200"
       android:text="clear"
       android:textColor="@color/btcolor"

       >

   </Button>
</LinearLayout>